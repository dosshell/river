            "request": "launch",
            "program": "${workspaceFolder}/test/create_test_data.py",
            "console": "integratedTerminal",
        },
        {
            "name": "run river text",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/river.py",
            "console": "integratedTerminal",
            "args": [
                "-c",
                "../settings.json"
            ]
        },
        {
            "name": "run river mail",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/river.py",
            "console": "integratedTerminal",
            "args": [
                "-c",
                "../settings.json",
                "--mail"
            ]
        },
        {
            "name": "run river fetch",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/river.py",
            "console": "integratedTerminal",
            "args": [
                "-c",
                "../settings.json",
                "--fetch",
                "--clearcache"
            ]
        }
    ]
